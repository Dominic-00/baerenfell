# Docker Environment Configuration
# Copy this to .env and customize

# Node Environment
NODE_ENV=production
PORT=3000
CLIENT_URL=http://localhost:3000

# Database (PostgreSQL in Docker)
DB_HOST=db
DB_PORT=5432
DB_NAME=baerenfell_db
DB_USER=baerenfell_user
